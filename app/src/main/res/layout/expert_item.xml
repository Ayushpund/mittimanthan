<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expertCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Expert Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/expertAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_background_light_green"
            android:padding="16dp"
            android:layout_marginEnd="16dp"
            app:shapeAppearanceOverlay="@style/circleImageView"/>

        <!-- Expert Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expertName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Rajesh Sharma"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/expertExpertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soil Analysis Expert"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/expertExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10+ years"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:background="@drawable/tag_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/tag_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        app:tint="#FFC107"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/expertRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/expertAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available: Mon-Fri, 9AM-5PM"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/expertFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/consultation"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginStart="4dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bookButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    android:textSize="12sp"
                    android:minHeight="36dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/expertDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specializes in soil pH analysis and nutrient management"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>